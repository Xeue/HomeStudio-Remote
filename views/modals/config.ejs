<article id="config" class="popup overflow-auto hidden pt-5">
    <section class="bg-dark text-light alert text-nowrap flex-column d-flex mb-0 container" data-bs-theme="dark">
        <div class="row mt-2">
            <h3 class="w-50">Edit Encoders</h3>
        </div>

        <div class="nav nav-pills mb-2 nav-justified" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-encoders-tab" data-bs-toggle="tab" data-bs-target="#nav-encoders" type="button" role="tab" aria-controls="nav-encoders" aria-selected="true">Encoders</button>
            <button class="nav-link" id="nav-decoders-tab" data-bs-toggle="tab" data-bs-target="#nav-decoders" type="button" role="tab" aria-controls="nav-decoders" aria-selected="false">Decoders</button>
        </div>

        <section class="tab-content overflow-auto">
            <div class="tab-pane fade show active" data-editor="encoders" role="tabpanel" id="nav-encoders">
                <div class="dataTable collapse show">
                    <table class="table table-dark" data-editor="encoders">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th class="">Name</th>
                                <th class="">ID</th>
                                <th class="">Type</th>
                                <th class="">URL</th>
                                <th class="">Encoder Details</th>
                                <th class=""></th>
                            </tr>
                        </thead>
                        <tbody id="configEncoders" data-template="encoder"></tbody>
                    </table>
                </div>
                <div class="dataRaw collapse mt-3 mb-2">
                    <div id="configEncodersRaw"></div>
                </div>
                <div class="input-group p-1">
                    <input type="text" class="form-control" id="homestudioKey" placeholder="Homestudio Encoder Key (only for remote SRT feeds)" value="<%-homestudioKey%>">
                    <button class="btn btn-primary" id="homestudioKeySet">Set</button>
                </div>
            </div>
            <div class="tab-pane fade" data-editor="encoders" role="tabpanel" id="nav-decoders">
                <div class="dataTable collapse show">
                    <table class="table table-dark" data-editor="decoders">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th></th>
                                <th class="">Name</th>
                                <th class="">ID</th>
                                <th class="">URL</th>
                                <th class="">Feed</th>
                                <th class=""></th>
                            </tr>
                        </thead>
                        <tbody id="configDecoders" data-template="decoder"></tbody>
                    </table>
                </div>
                <div class="dataRaw collapse mt-3 mb-2">
                    <div id="configDecodersRaw"></div>
                </div>
                <div class="mb-1 d-flex justify-content-end gap-1">
                    <button class="btn btn-success pushAll" type="button">Start All</button>
                    <button class="btn btn-success stopAll" type="button">Stop All</button>
                </div>
                <div>
                    <h5>SRT Decoding message:</h5>
                    <div id="SRTPushStatus"></div>
                </div>
            </div>
        </section>

        <div class="mt-3 mx-0 d-flex gap-1 flex-wrap justify-content-end">
            <input id="csvUpload" class="form-control w-25" type="file" accept="text/csv" name="csvUpload" size="30">
            <button class="btn btn-primary tableImport" type="button" disabled>Import CSV</button>
            <button class="btn btn-primary tableExport" type="button">Export as CSV</button>
            <button class="btn btn-primary toggleTableRaw" type="button">Toggle View</button>
            <button class="btn btn-primary tableNew" type="button">Add new</button>
            <button class="btn btn-success tableSave" type="button">Save</button>
            <button id="closeConfig" class="btn btn-danger">Close</button>
            <div id="testId"></div>
        </div>
    </section>
</article>