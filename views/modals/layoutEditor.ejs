<article id="layout" class="popup overflow-auto hidden pt-5">
    <section class="bg-dark text-light alert text-nowrap flex-column d-flex mb-0 container">
        <div class="row mt-2">
            <h3 class="w-50">Layout Editor</h3>
        </div>

        <div class="nav nav-pills mb-2 nav-justified" id="nav-tab" role="tablist">
            <% layouts.forEach(layout => { %>
                <button class="nav-link layoutConfigSelect" id="layout<%=layout.ID%>-tab" data-id="<%=layout.ID%>" data-bs-toggle="tab" data-bs-target="#layout<%=layout.ID%>" type="button" role="tab" aria-controls="layout<%=layout.ID%>" aria-selected="true"><%=layout.Name%></button>
            <% }) %>
        </div>

        <section class="tab-content overflow-auto">
            <div class="tab-pane fade active show" role="tabpanel" id="layoutGridCont">
            </div>
        </section>

        <div class="mt-3 mx-0 d-flex gap-1 flex-wrap justify-content-end">
            <button class="btn btn-primary addLayout" type="button">New Layout</button>
            <span class="my-auto mx-2">Rows:</span>
            <select id="layoutRows" class="px-2">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
            <span class="my-auto mx-2">Columns:</span>
            <select id="layoutCols" class="px-2">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
            <button class="btn btn-success layoutSave" type="button">Save</button>
            <button id="closeConfig" class="btn btn-danger">Close</button>
            <div id="testId"></div>
        </div>
    </section>
</article>