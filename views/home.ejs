<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="lib/bootstrap.min.css" rel="stylesheet" type="text/css">
	<link href="lib/jsoneditor.css" rel="stylesheet" type="text/css">
    <link href="css/home.css" rel="stylesheet">
    <script type="text/javascript">
        const currentSystem = "<%=systemName%>";
        const version = '<%=version%>';
		const homestudioKey = '<%=homestudioKey%>';
		let streams = <%- JSON.stringify(streams) %>;
    </script>
    <script type="text/javascript" src="lib/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="lib/bootstrap.min.js"></script>
	<script type="text/javascript" src="lib/ejs.js"></script>
    <script type="text/javascript" src="lib/commonWS.js"></script>
	<script type="text/javascript" src="lib/jsoneditor.js"></script>
	<script type="text/javascript" src="lib/ovenplayer.js"></script>
	<script type="text/javascript" src="lib/sldp.js"></script>
    <script type="text/javascript" src="js/home.js"></script>
    <title>Home Studio</title>
    <link id="favicon_48" rel="icon" href="img/icon/icon.svg" sizes="256x256">
</head>

<body class="bg-dark h-100 d-flex flex-column">
    <div id="loading" class="hidden"></div>

    <nav class="drag navbar navbar-expand-lg navbar-dark bg-title px-2 justify-content-between">
        <div class="d-flex align-items-center">
			<a class="navbar-brand" href="#">
				<img src="img/icon/icon.svg" class="d-inline-block align-top" alt="" width="30" height="30">
				Home Studio
			</a>
			<div class="btn-group">
				<div class="w-auto" id="broken"></div>
			</div>
		</div>
		<div role="tablist">
			<button class="btn btn-secondary active" id="nav-one-tab" data-bs-toggle="tab" data-bs-target="#nav-one" type="button" role="tab" aria-controls="nav-one" aria-selected="true">Single Camera</button>
			<button class="btn btn-secondary" id="nav-two-tab" data-bs-toggle="tab" data-bs-target="#nav-two" type="button" role="tab" aria-controls="nav-two" aria-selected="true">Dual Camera</button>
			<button class="btn btn-secondary" id="nav-four-tab" data-bs-toggle="tab" data-bs-target="#nav-four" type="button" role="tab" aria-controls="nav-four" aria-selected="true">Quad Camera</button>
		</div>
		<button id="toggleConfig" class="btn btn-secondary">Config</button>
    </nav>
    <main class="tab-content container-fluid bg-dark py-3 overflow-auto d-flex">
        <section class="flex-grow-1 tab-pane fade show mainCont masonry masonry-1 active" id="nav-one" role="tabpanel" aria-labelledby="nav-one-tab">
            <div class="text-light brick selectedPlayer" data-type="oneCam">
				<h4 class="tabHeader">Choose Camera</h4>
				<div class="tabPlayer"></div>
            </div>
        </section>
		<section class="flex-grow-1 tab-pane fade masonry masonry-2" id="nav-two" role="tabpanel" aria-labelledby="nav-two-tab">
			<div class="text-light" data-type="oneCam">
				<h4>Choose First Camera</h4>
            </div>
			<div class="text-light" data-type="twoCam">
				<h4>Choose Second Camera</h4>
            </div>
		</section>
		<section class="flex-grow-1 tab-pane fade masonry masonry-2" id="nav-four" role="tabpanel" aria-labelledby="nav-four-tab">
			<div class="text-light" data-type="oneCam">
				<h4>Choose First Camera</h4>
            </div>
			<div class="text-light" data-type="twoCam">
				<h4>Choose Second Camera</h4>
            </div>
			<div class="text-light" data-type="threeCam">
				<h4>Choose Third Camera</h4>
            </div>
			<div class="text-light" data-type="fourCam">
				<h4>Choose Fourth Camera</h4>
            </div>
		</section>
		<aside id="tumbList" class="ps-3">
			
		</aside>
    </main>
    
    <article id="config" class="overflow-auto hidden pt-5">
        <section class="bg-dark text-light alert text-nowrap container flex-column d-flex mb-0">
            <div class="row mt-2">
                <h3 class="w-50">Edit Streams</h3>
            </div>

            <section class="overflow-auto">
                <div class="" data-editor="streams" role="">
                    <div class="dataTable collapse show">
                        <table class="table table-dark" data-editor="streams">
                            <thead class="position-sticky top-0">
                                <tr>
                                    <th class="">Name</th>
                                    <th class="">Type</th>
									<th class="">URL</th>
                                    <th class="">Port</th>
                                    <th class=""></th>
                                </tr>
                            </thead>
                            <tbody id="configStreams" data-template="stream"></tbody>
                        </table>
                    </div>
                    <div class="dataRaw collapse mt-3 mb-2">
                        <div id="configStreamsRaw"></div>
                    </div>
					<div class="input-group">
						<input type="text" class="form-control" id="homestudioKey" placeholder="Homestudio Stream Key" value="<%-homestudioKey%>">
						<button class="btn btn-primary" id="homestudioKeySet">Set</button>
					</div>
                </div>
            </section>

            <div class="mt-3 mx-0 align-self-end d-flex gap-1">
                <input id="csvUpload" class="form-control" type="file" accept="text/csv" name="csvUpload" size="30">
                <button class="btn btn-primary tableImport" type="button" disabled>Import CSV</button>
                <button class="btn btn-primary tableExport" type="button">Export as CSV</button>
                <button class="btn btn-primary toggleTableRaw" type="button">Toggle View</button>
                <button class="btn btn-primary tableNew" type="button">Add new</button>
                <button class="btn btn-success tableSave" type="button">Save</button>
                <button id="closeConfig" class="btn btn-danger">Close</button>
                <div id="testId"></div>
            </div>
        </section>
    </article>
</body>

</html>