<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="dark">

    <!-- Bootstrap CSS -->
    <link href="lib/bootstrap.min.css" rel="stylesheet" type="text/css">
	<link href="lib/jsoneditor.css" rel="stylesheet" type="text/css">
    <link href="css/home.css" rel="stylesheet">
    <script type="text/javascript">
        const currentSystem = "<%=systemName%>";
        const version = '<%=version%>';
		const homestudioKey = '<%=homestudioKey%>';
        const host = '<%=host%>';
		let encoders = <%- JSON.stringify(encoders) %>;
        let decoders = <%- JSON.stringify(decoders) %>;
        window.encoders = encoders;
        window.decoders = decoders;
    </script>
    <script type="text/javascript" src="lib/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="lib/bootstrap.min.js"></script>
	<script type="text/javascript" src="lib/ejs.js"></script>
    <script type="text/javascript" src="lib/commonWS.js"></script>
	<script type="text/javascript" src="lib/jsoneditor.js"></script>
	<script type="text/javascript" src="lib/ovenplayer.js"></script>
	<script type="text/javascript" src="lib/sldp.js"></script>
    <script type="text/javascript" src="js/home.js"></script>
    <title><%=systemName%></title>
    <link id="favicon_48" rel="icon" href="img/icon/icon.svg" sizes="256x256">
    <link rel="manifest" href="manifest.json">
</head>

<body class="bg-dark h-100 d-flex flex-column">
    <div id="loading" class="hidden"></div>

    <nav class="drag navbar navbar-expand-lg navbar-dark bg-title px-2 justify-content-between">
        <div class="d-flex align-items-center">
			<a class="navbar-brand" href="#">
				<img src="img/icon/icon.svg" class="d-inline-block align-top" alt="" width="30" height="30">
				<%-systemName%>
			</a>
			<div class="btn-group">
				<div class="w-auto" id="broken"></div>
			</div>
		</div>
        <div class="d-flex gap-1">
		    <button id="toggleConfig" class="btn btn-secondary">Encoders Config</button>
        </div>
        <div></div>
    </nav>
    <main id="appHome" class="tab-content container-fluid bg-dark py-3 overflow-auto d-flex">
		<aside id="tumbList" class="d-flex flex-wrap gap-3 overflow-auto w-100">
			
		</aside>
    </main>
    
    <article id="config" class="overflow-auto hidden pt-5">
        <section class="bg-dark text-light alert text-nowrap flex-column d-flex mb-0 container">
            <div class="row mt-2">
                <h3 class="w-50">Edit Encoders</h3>
            </div>

            <div class="nav nav-pills mb-2 nav-justified" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-encoders-tab" data-bs-toggle="tab" data-bs-target="#nav-encoders" type="button" role="tab" aria-controls="nav-encoders" aria-selected="true">Encoders</button>
                <button class="nav-link" id="nav-decoders-tab" data-bs-toggle="tab" data-bs-target="#nav-decoders" type="button" role="tab" aria-controls="nav-decoders" aria-selected="false">Decoders</button>
            </div>

            <section class="tab-content overflow-auto">
                <div class="tab-pane fade show active" data-editor="encoders" role="tabpanel" id="nav-encoders">
                    <div class="dataTable collapse show">
                        <table class="table table-dark" data-editor="encoders">
                            <thead class="position-sticky top-0">
                                <tr>
                                    <th class="">Name</th>
                                    <th class="">ID</th>
                                    <th class="">Type</th>
									<th class="">URL</th>
                                    <th class="">Encoder Details</th>
                                    <th class=""></th>
                                </tr>
                            </thead>
                            <tbody id="configEncoders" data-template="encoders"></tbody>
                        </table>
                    </div>
                    <div class="dataRaw collapse mt-3 mb-2">
                        <div id="configEncodersRaw"></div>
                    </div>
					<div class="input-group p-1">
						<input type="text" class="form-control" id="homestudioKey" placeholder="Homestudio Encoder Key (only for remote SRT feeds)" value="<%-homestudioKey%>">
						<button class="btn btn-primary" id="homestudioKeySet">Set</button>
					</div>
                </div>
                <div class="tab-pane fade" data-editor="decoders" role="tabpanel" id="nav-decoders">
                    <div class="dataTable collapse show">
                        <table class="table table-dark" data-editor="decoders">
                            <thead class="position-sticky top-0">
                                <tr>
                                    <th></th>
                                    <th class="">Name</th>
                                    <th class="">ID</th>
									<th class="">URL</th>
									<th class="">Feed</th>
                                    <th class=""></th>
                                </tr>
                            </thead>
                            <tbody id="configDecoders" data-template="decoder"></tbody>
                        </table>
                    </div>
                    <div class="dataRaw collapse mt-3 mb-2">
                        <div id="configDecodersRaw"></div>
                    </div>
                    <div>
                        <h5>SRT Decoding message:</h5>
                        <div id="SRTPushStatus"></div>
                    </div>
                </div>
            </section>

            <div class="mt-3 mx-0 align-self-end d-flex gap-1">
                <input id="csvUpload" class="form-control" type="file" accept="text/csv" name="csvUpload" size="30">
                <button class="btn btn-primary tableImport" type="button" disabled>Import CSV</button>
                <button class="btn btn-primary tableExport" type="button">Export as CSV</button>
                <button class="btn btn-primary toggleTableRaw" type="button">Toggle View</button>
                <button class="btn btn-primary tableNew" type="button">Add new</button>
                <button class="btn btn-success tableSave" type="button">Save</button>
                <button id="closeConfig" class="btn btn-danger">Close</button>
                <div id="testId"></div>
            </div>
        </section>
    </article>
</body>

</html>